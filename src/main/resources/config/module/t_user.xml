<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">
	<select id="user.selectPageList" parameterType="com.enterprise.entity.User"
		resultType="com.enterprise.entity.User">
		select * from t_user where 1=1
		<if test="id!=0">
			and id=#{id}
		</if>
		<if test="username!=null and username!=''">
			and username=#{username}
		</if>
		<if test="password!=null and password!=''">
			and password=#{password}
		</if>

		order by id
		limit #{offset},#{pageSize}
	</select>
	<select id="user.selectPageCount" parameterType="com.enterprise.entity.User"
		resultType="java.lang.Integer">
		select count(*) from (
		select * from t_user where 1=1
		<if test="id!=0">
			and id=#{id}
		</if>
		<if test="username!=null and username!=''">
			and username=#{username}
		</if>
		<if test="password!=null and password!=''">
			and password=#{password}
		</if>

		) a
	</select>
	<select id="user.selectOne" parameterType="com.enterprise.entity.User"
		resultType="com.enterprise.entity.User">
		select * from t_user where 1=1
		<if test="id!=0">
			and id=#{id}
		</if>
		<if test="username!=null and username!=''">
			and username=#{username}
		</if>
		<if test="password!=null and password!=''">
			and password=#{password}
		</if>
		<if test="nickname!=null and nickname!=''">
			and nickname=#{nickname}
		</if>

	</select>
	<select id="user.selectCount" parameterType="com.enterprise.entity.User"
		resultType="int">
		select * from t_user where 1=1
		<if test="username!=null and username!=''">
			and username=#{username}
		</if>
		<if test="nickname!=null and nickname!=''">
			and nickname=#{nickname}
		</if>
	</select>
	<select id="user.selectOneByCondition" parameterType="com.enterprise.entity.User"
		resultType="com.enterprise.entity.User">
		select * from t_user where 1=1
		<if test="nickname!=null and nickname!=''">
			and nickname=#{nickname}
		</if>
	</select>
	<insert id="user.insert" parameterType="com.enterprise.entity.User"
		useGeneratedKeys="true" keyProperty="id">
		insert into t_user
		(id,username,password,createtime,createAccount,nickname,email
		<if test="portrait!=null and portrait!=''">
			,portrait
		</if>
		)
		values
		(id,#{username},#{password},now(),#{createAccount},#{nickname},#{email}
		<if test="portrait!=null and portrait!=''">
			,#{portrait}
		</if>
		)
	</insert>
	<update id="user.update" parameterType="com.enterprise.entity.User">
		update t_user set
		id=#{id},updatetime=now(),updateAccount=#{updateAccount}
		<if test="password!=null">
			,password=#{password}
		</if>

		<if test="nickname!=null and nickname!=''">
			,nickname=#{nickname}
		</if>
		<if test="email!=null and email!=''">
			,email=#{email}
		</if>
		<if test="portrait!=null and portrait!=''">
			,portrait=#{portrait}
		</if>
		where id=#{id}
	</update>
</mapper>